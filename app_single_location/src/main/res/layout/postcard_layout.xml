<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/postcardImage"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_background"
        android:scaleType="centerInside"
        android:src="@drawable/ic_link_white"
        app:layout_constraintEnd_toEndOf="@+id/postcardImage"
        app:layout_constraintTop_toTopOf="@id/postcardImage" />

    <LinearLayout
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:background="@drawable/splited_diagonal_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/postcardImage"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/swapImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    <!--
    <FrameLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/splited_diagonal_background"
            app:layout_constraintBottom_toBottomOf="@+id/postcardImage">

    </FrameLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>