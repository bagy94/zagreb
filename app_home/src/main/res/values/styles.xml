<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationDrawerItems" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="LanguageButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/language_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Location" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">start</item>
    </style>

    <style name="Location.Name" parent="Location">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_navy</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Location.Address" parent="Location">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomBarItemTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nexa_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SwitchLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MarkerLink" parent="ExpendableLabel">

    </style>

    <style name="DrawerSwitch">
        <item name="trackTint">@color/switch_track_black_blue_50</item>
        <item name="thumbTint">@color/switch_thumb_white_blue</item>
    </style>

    <style name="Credits" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>