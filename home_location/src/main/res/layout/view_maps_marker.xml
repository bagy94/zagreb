<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_marker_background">

    <TextView
            tools:text="Naziv lokacije"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locName"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            style="@style/Location.Name"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"/>

    <TextView
            android:text="@string/find_out_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locFindOutMore"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/locName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            style="@style/MarkerLink"/>
</androidx.constraintlayout.widget.ConstraintLayout>